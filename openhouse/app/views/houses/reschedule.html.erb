

<div class="cover3">
  <div class="clearfix"></div>
  <div class="container">

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
        <div id="newHouse_panel" class="panel panel-primary panel-transparent">
          <div class="panel-body">

            <form role="form" action="/houses/<%= house.id %>" method="POST">
              <div>
                <h2>Revise Re-Schedule <%= house.st_address %></h2>
              </div>

              <div class="row">
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="openhouse_date">Open House Date</label>
                    <input type="text" class="form-control" id="sch_date" name="sch_date">
                  </div>
                </div>
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="openhouse_time">Open House Time</label>
                    <input type="text" class="form-control" id="sch_time" name="sch_time">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="street_address">Open House Street Address</label>
                    <input type="text" class="form-control" id="st_address" name="st_address">
                  </div>
                </div>
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" name="city">
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" class="form-control" id="state" name="state">
                  </div>
                </div>
                <div class="col-sm-6 col-md-6">
                  <div class="form-group">
                    <label for="zip_code">Zip Code</label>
                    <input type="text" class="form-control" id="zip" name="zip">
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="user_id"></label>
                <input type="hidden" class="form-control" id="user_id" name="user_id" value=<%= @user.id %> >
              </div>
              <input name="_method" value="PUT" type="hidden" />
              <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

              <div class="form-group" style="text-align: center">
                <button type="submit" class="btn btn-primary" id="newHouse_submit">Update</button>
              </div>
               
            </form>
            

          </div>
        </div>
      </div>
    </div>
            
  </div>

</div>