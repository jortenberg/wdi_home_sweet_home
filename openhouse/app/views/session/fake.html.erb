
<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-4">
      <div id="login_panel" class="panel panel-default">
        <div class="panel-body" style="center">
          <form role="form" action="/users" method="POST">
            <div class="panel-heading">
              <h2>WELCOME TO OPENHOUSER</h2>
            </div>

            <div class="form-group">
              <label for="first_name">First Name</label>
              <input name="fname" type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="last_name">Last Name</label>
              <input name="lname" type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="emailAddress">Email Address</label>
              <input name="email" type="email" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input name="password" type="password" class="form-control">
            </div>
            <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
            <div class="form-group">
              <input type="submit" class="btn btn-md" value="Sign Up">
            </div>
          </form>
          
          <div class="form-group">
            <h6>Not a member?<a href="/users/new"> Sign up!</a></h6>
            <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">

  <h3>Sign up to be a member of Open House</h3>

  <form action="/users" method="POST">
    <label>
      first name:
      <input name="fname" />
    </label>

    <label>
      last name:
      <input name="lname" />
    </label>

    <label>
      email:
      <input name="email" />
    </label>

    <label>
      password:
      <input name="password" />
    </label>

    <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

    <button>Submit</button>
  </form>

</div>