<div class="cover1">
	<div class="clearfix"></div>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-4">
				<div id="login_panel" class="panel panel-default">
				  <div class="panel-body">
					  <form role="form" action="/session" method="POST">
					  	<div class="panel-heading">
					    	<h1>LOGIN</h1>
					    </div>

					    <% if @error %>
					      <p style='color: red;'>Incorrect email/password</p>
					    <% end %>

					    <div class="form-group">
					      <label for="emailAddress">Email address</label>
					      <input name="email" type="email" class="form-control">
					    </div>
					    <div class="form-group">
					      <label for="password">Password</label>
					      <input name="password" type="password" class="form-control">
					    </div>
					    <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
					    <div class="form-group">
					    	<button type="submit" class="btn btn-primary">Submit</button>
					    </div>
					  </form>
						
					  <div class="form-group">
							<p>Not a member?<a href="/users/new"> Sign up!</a></p>
							<input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>